{
  "manifest_version": 2,
  "name": "REACTionary",
  "version": "0.1",

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],

  "web_accessible_resources": ["hook.js"],

  "devtools_page": "devtools-root.html",

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",

  "permissions": ["<all_urls>"],

  "devtools_page": "devtools-root.html"
}
