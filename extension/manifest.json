{
  "manifest_version": 2,
  "name": "Realize",
  "version": "0.0.0.1",

  "icons": {
    "128": "icon128.png" 
  },

  "permissions": [
    "activeTab",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "web_accessible_resources": ["hook.js"],

  "devtools_page": "devtools-root.html",

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
